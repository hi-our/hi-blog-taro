@keyframes border-transform {
  0%,100% { border-radius: 63% 37% 54% 46% / 55% 48% 52% 45%; } 
  14% { border-radius: 40% 60% 54% 46% / 49% 60% 40% 51%; } 
  28% { border-radius: 54% 46% 38% 62% / 49% 70% 30% 51%; } 
  42% { border-radius: 61% 39% 55% 45% / 61% 38% 62% 39%; } 
  56% { border-radius: 61% 39% 67% 33% / 70% 50% 50% 30%; } 
  70% { border-radius: 50% 50% 34% 66% / 56% 68% 32% 44%; } 
  84% { border-radius: 46% 54% 50% 50% / 35% 61% 39% 65%; } 
}
html.mode-dark
  .open-main
    .list .item
      .item-img
      .item-mask
        filter invert(1) hue-rotate(180deg)
      
.open-main
  padding-bottom 60px

  .list
    display: flex
    justify-content space-between
    flex-wrap: wrap
    padding: 0 16px
    max-width 1200px
    margin 0 auto

    .item
      display block
      width 47.8%
      padding 38px 0 33px
      text-align center
      background: var(--color-module-bg)
      position: relative
      cursor:pointer
      
      &:nth-child(3)
      &:nth-child(4)
        margin-top 20px
      
      for i in 0..4
        &:nth-child({i}) .item-img
          animation-delay (i * 0.8)s
      @media (hover: hover) and (pointer: fine)
        &:hover
          .item-mask
            opacity: 0.4
            visibility visible
            transition: all 0.5s ease
        
      .item-img
        margin auto
        display block
        width: 101px
        height: 101px
        background var(--color-module-circle) 
        border-radius: 61% 39% 55% 45% / 61% 38% 62% 39%;
        animation border-transform 6s infinite
        // background: url(https://www.xiaoxili.com/images/open-resources/3d-swiper-bg-mini.png) no-repeat center center
        background-size: 100%
        
      .item-icon-img
        display:inline-block
        width: 52px
        height: 52px
        margin: 24px
        
              
      .item-line
        height: 1px
        background: var(--color-primary)
        width: 60px;
        margin: 30px auto 14px auto
        
            
      > h3
        height: 30px
        font-weight: 400
        font-size 16px
        line-height 1.4
        color: var(--color-title)
        
          
      > p
        font-weight: 400
        font-size 12px
        color: var(--color-text)
              
          
      .item-mask
        position: absolute
        display flex
        left: 0
        top: 0 
        width: 100%
        height: 100%
        background: rgba(0, 0, 0, 0.4)
        text-align: center
        opacity: 0
        visibility hidden
        transition: all 0.5s ease

        picture
          display block
          margin: auto

// 宽度大于768px时
@media  (min-width 768px) 
  .open-main

    .list
      .item
        width: 148px;
        
        &:nth-child(3)
        &:nth-child(4)
          margin-top 0
 

// 屏幕尺寸大于1024时
@media  (min-width 1024px) 
  .open-main
    .list
      padding: 0 32px
      .item
        width: 225px;
        
        > h3            
          font-size: 18px;           
        
        > p        
          font-size: 16px;

// 屏幕尺寸大于1200时
@media  (min-width 1200px) 
   .open-main
      .list
        padding: 0

        .item
          width: 270px;
